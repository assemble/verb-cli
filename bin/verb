#!/usr/bin/env node

const argv      = require('minimist')(process.argv.slice(2));
const Liftoff   = require('liftoff');
const log       = require('verbalize');


// Verbalize `runner`
log.runner = 'verb-cli';

// Verbose logging: use `-v` or `--verbose`
var verbose      = argv.v || argv.verbose || false;
log.mode.verbose = verbose;

// Initialize Liftoff
var cli = new Liftoff({ name: 'verb' });

cli.on('requireFail', function (name, err) {
  console.log('  Unable to load:', name, err);
});

cli.launch(require('../lib/handler'));


// Done.
log.done('done');